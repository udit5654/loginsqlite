<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mental Health Assessment"
        android:textSize="24sp"
        android:gravity="center"/>

    <!-- Question 1 -->
    <TextView
        android:id="@+id/textViewQuestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1: How often have you been feeling nervous, anxious, or on edge in the past 2 weeks?"
        android:textSize="15sp"
        android:paddingTop="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupQuestion1"
        android:layout_width="393dp"
        android:layout_height="46dp"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <RadioButton
            android:id="@+id/radioButtonQuestion1ption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not at all"
            android:value="0"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/radioButtonQuestion1ption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rarely"
            android:value="1"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/radioButtonQuestion1ption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sometimes"
            android:value="2"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/radioButtonQuestion1ption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Often"
            android:value="3"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/radioButtonQuestion1ption5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Always"
            android:value="4"
            android:textSize="12dp"/>

    </RadioGroup>

    <!-- Add similar layout for rest of the questions -->
    <!--    quesion 2-->
    <TextView
        android:id="@+id/textViewQuestion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 2: how r u"
        android:textSize="15sp"
        android:paddingTop="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupQuestion2"
        android:layout_width="393dp"
        android:layout_height="46dp"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <RadioButton
            android:id="@+id/radioButtonQuestion2ption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not at all"
            android:value="0"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/radioButtonQuestion2ption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rarely"
            android:value="1"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/radioButtonQuestion2ption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sometimes"
            android:value="2"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/radioButtonQuestion2ption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Often"
            android:value="3"
            android:textSize="12dp"/>

        <RadioButton
            android:id="@+id/radioButtonQuestion2ption5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Always"
            android:value="4"
            android:textSize="12dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="179dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginVertical="490dp"
        android:text="Submit" />

</LinearLayout>